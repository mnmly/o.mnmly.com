extends layout

block prepend title
  #{ page.title } -

block append sticky
  div.inner
    h5= page.title


block prepend bodyBlock
  - bodyClass = 'article'

block header

block content
  article.post
    header
      h2.title= page.title

    aside.meta
      time(datetime=page.date)= moment(page.date).format("MMM. Do, YYYY")
    
    div.article-container
      section.body-text!= page.html

      footer
        div.share
          include ../includes/share.svg
          span.seduce-text Did you like it?
          ul.social
            li.g
              .socialite.googleplus( data-size = "medium", data-annotation = "inline", data-width =  "100" )
            li.t
              a.socialite.twitter(href="https://twitter.com/share", data-via = "mnmly", data-lang = "en" )
            li.f
              div.socialite.facebook(data-send="false", data-layout="button_count", data-width="60", data-show-faces="false", rel="nofollow", target="_blank")
