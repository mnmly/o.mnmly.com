html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(name="viewport", content="width=device-width")
      meta(property='og:title', content=locals.name)
      meta(property='og:type', content="article")
      meta(property='og:url', content=locals.url + page.url)
      meta(property='og:site_name', content=locals.name)
      
      //meta(property='og:image', content='http://ia.media-imdb.com/rock.jpg')
      //meta(property='fb:admins', content='USER_ID')
      meta(property='og:description', content='thougts by mnmly')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/normalize.css')
      link(rel='stylesheet', href='/css/github.css')
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='/css/mobile.css')
      
      script(src="/js/libs/require.js", data-main="/js/main.js")
      script
        if( /\:8080/.test( document.location.href ) ){
          require(['main']);
        } else{
          require(['main-built']);
        }
        window.scrollTo(0, 1);



  - bodyClass = "index"
  block bodyBlock
    body(class=bodyClass)
      #top-header
        block sticky
          include ../includes/logo.svg

      header.identity-header
        div.inner
          block header
            h1
              a(href=locals.url)
                div#logo-outer
                  include ../includes/logo.svg

            p.desc= locals.description

      div#content
        .fade-pane
        block content
          h2 Welcome to zombocom!

      #fb-root
