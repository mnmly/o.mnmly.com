!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(name="viewport", content="width=device-width")
      meta(property='og:title', content= ( page.title != "Untitled" ? page.title + " - " : "" ) + locals.name)
      meta(property='og:type', content="article")
      meta(property='og:url', content=locals.url + page.url)
      meta(property='og:site_name', content=locals.name)
      
      //meta(property='fb:admins', content='USER_ID')
      
      meta(property='og:description', content= (page._content) ? page._content.replace(/\n/gi, ' ').replace(/\[(.*?)\]\(.*?\)/ig, "$1").substring(0, 100) + "…" : "output by mnmly")
      meta(name='description', content= (page._content) ? page._content.replace(/\n/gi, ' ').replace(/\[(.*?)\]\(.*?\)/ig, "$1").substring(0, 100) + "…" : "output by mnmly")

      title
        block title
          = locals.name

      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/normalize.css')
      link(rel='stylesheet', href='/css/github.css')
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='/css/mobile.css')
      script(src="/js/libs/require.js")

      :coffeescript

        window.MNMLY =
          onScriptLoaded: ->

        if /\:8080/.test( document.location.href )
          document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js"></' + 'script>')
          require(['/js/main.js'])
        else
          require(['/js/main-built.js'])

        window.scrollTo(0, 1)


  - bodyClass = "index"

  block bodyBlock
    body(class=bodyClass)
      #top-header
        block sticky
          a(href='/')
            include ../includes/logo.svg

      header.identity-header
        div.inner
          block header
            h1
              a(href=locals.url)
                div#logo-outer
                  include ../includes/logo.svg

            p.desc= locals.description

      div#content
        .fade-pane
        block content
          h2 Welcome to zombocom!
      block footer
        footer#main-footer
          small By 
            a(href="http://mnmly.com", target="_blank") mnmly
            | .
            br
            | Here's a 
            a(href="/colophone.html") colophone
      #fb-root
