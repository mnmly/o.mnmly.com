@import nib
@import '_utils'

@media only screen and (max-width: 550px)
    
  // ============ INTRO ==============
  //  ANIMATION RESET CLASS
  .kill-animation
    animation: none

  // SET INITIAL STATE
  #logo-outer
    transform calcRotation(-1, logo-radius, true)
  
  .index
    header.identity-header
      animation slide-up .75s 3.75s both

    p.desc
      animation fade-in .5s 2s both

    #content
      animation fade-scale-up 1.5s 4s both cubic-bezier(0.860, 0.000, 0.070, 1.000)


  p.desc
    opacity: 0

    
  body
    padding 0
    position relative
  
  #top-header
    box-shadow none

    a svg
      left 22px

    h5
      padding-left 20px
      padding-right 50px
      overflow: ellipsis
      box-sizing border-box
      display block
      width 100%

    .inner
      margin-left 56px
      border-left 1px solid hsla(0, 0%, 0%, .1)

  .no-touch
    .index
      header.identity-header
        position: relative
        height auto
        padding-top 30px
        padding-bottom 30px
  .index
    header.identity-header
      position absolute
      border-bottom 1px solid hsla(0, 0%, 0%, .1)
      background white
      padding-top 130px
      width 100%
      height 290px
      z-index: 1

      .inner
        h1
          width 100%
          text-align center

          #logo-outer
            display inline-block
    
      p.desc
        width 100%
        padding 0
        margin 0
        text-align center

  #content
    transform-origin 50% 50px
    padding 0px
    padding-top 50px
    .fade-pane
      display none

    header
      margin-bottom 5px
      border-bottom none
      h2
        margin-left 0
        margin-bottom 0

    aside.meta
      width 100%
      margin-bottom 5px
    
    article.post
      padding: 20px
      box-sizing border-box

    .article-container
      width 100%
      padding-left 0
      padding-bottom 30px
      .body-text
        ul
          padding-left 15px

    footer
      padding-top 10px
      padding-bottom 10px
      
    .share
      .seduce-text
        display none
      svg
        margin 0 auto
        float none
        display block
      .social
        margin-top 10px
        padding-bottom 0
        width 234px
        margin-left 18px
        .f
          width 55px

  #main-footer
    padding 10px 20px
    width 100%
    box-sizing border-box
    margin-left 0
    text-align center

  body.colophone
    p
      margin-bottom 5px
    #content
      margin-top 50px
    section
      padding-right 20px
      padding-left 20px
      margin-bottom 20px
      h5
        width 100%
        margin-bottom 5px
        font-family initial
        font-weight initial
        text-align left

      .right
        width 100%

  body.four-oh-four
    h1
      margin: 0
      width 100%
      margin-top 60px
      text-align center

    #top-header
      display none

    .mobile-logo
      text-align center
      display block
      opacity 0

  .touch, .no-touch
    .mobile-logo
      opacity 1
      animation fade-scale-up 2s cubic-bezier(0.860, 0.000, 0.070, 1.000) both

