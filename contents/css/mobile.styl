
@media only screen and (max-width: 550px)
  body
    padding 0
    position relative
  
  #top-header
    box-shadow none
    >svg
      left 22px

    h5
      padding-left 20px

    .inner
      left 56px
      border-left 1px solid hsla(0, 0%, 0%, .1)
  
  header.identity-header

  header.identity-header
    position absolute
    border-bottom 1px solid hsla(0, 0%, 0%, .1)
    //padding-bottom 100px
    background white
    padding-top 130px
    width 100%
    height 290px
    z-index: 1

    .inner
      h1
        width 100%
        text-align center
        
        #logo-outer
          display inline-block

    p.desc
      width 100%
      padding 0
      margin 0
      text-align center

  #content
    padding 0px
    padding-top 50px
    .fade-pane
      display none
    header
      margin-bottom 5px
      border-bottom none
      h2
        margin-left 0
        margin-bottom 0

    aside.meta
      width 100%
      margin-bottom 5px
    
    article.post
      padding: 20px
      box-sizing border-box

    .article-container
      width 100%
      padding-left 0
      .body-text
        ul
          padding-left 15px
    footer
      padding-top 10px
      padding-bottom 10px
      
    .share
      .seduce-text
        display none
      svg
        margin 0 auto
        float none
        display block
      .social
        margin-top 10px
        padding-bottom 0
        width 234px
