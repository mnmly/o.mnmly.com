@import nib

baseColor = #E9E7E2
left-width = 110px
logo-radius = 40

:root
  font-size 12px

body
  //background-image url('../images/bg.gif')
  text-rendering optimizelegibility
  padding: 40px

.ornament
  fill hsl(43, 7%, 82%)
  text-align center
  svg
